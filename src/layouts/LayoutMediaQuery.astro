---
import '../styles/main.scss';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Levan Vekua - Web Designer & Developer based in New York." />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/x-icon" href="/img/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Preload critical resources -->
		<link rel="preload" href="/img/logo.svg" as="image" type="image/svg+xml" />
		<link rel="preload" href="/img/lv-background.webp" as="image" type="image/webp" />
		
		<!-- Load non-critical CSS with media query trick -->
		<link rel="stylesheet" href="/path-to-non-critical.css" media="print" onload="this.media='all';" />
		<noscript><link rel="stylesheet" href="/path-to-non-critical.css" /></noscript>
		
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
