---
export interface Props {
	href: string;
	imageSrc: string;
	imageAlt: string;
	title: string;
	description: string;
}

const { href, imageSrc, imageAlt, title, description } = Astro.props;
---

<a href={href} target="_blank">
	<img loading="lazy" src={imageSrc} alt={imageAlt} />
	<div class="list-group-grid__item__wrap">
		<h3 class="list-group-grid__item__title">{title}</h3>
		<p class="list-group-grid__item__description" set:html={description} />
		<div>
			<i class="link-icon"></i>
		</div>
	</div>
</a>
